<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sale.warranty View List -->
    <record id="view_sale_warranty_list" model="ir.ui.view">
        <field name="name">view.sale.warranty.list</field>
        <field name="model">sale.warranty</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View sale.warranty form -->
    <record id="view_sale_warranty_form" model="ir.ui.view">
        <field name="name">view.sale.warranty.form</field>
        <field name="model">sale.warranty</field>
        <field name="arch" type="xml">
            <form string="Sale Warranty">
                <sheet>
                  <group>
                    <field name="name" />
                    <field name="sale_order_id" />
                    <field name="warranty_period" />
                    <field name="warranty_expiry_date" />
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View sale.warranty search -->
    <record id="view_sale_warranty_search" model="ir.ui.view">
        <field name="name">view.sale.warranty.search</field>
        <field name="model">sale.warranty</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action sale.warranty -->
    <record id="action_sale_warranty" model="ir.actions.act_window">
        <field name="name">Sale Warranty</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.warranty</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Sale Warranty.
            </p>
        </field>
    </record>
     
    <menuitem id="sales_mang_root" name="warranty" sequence="1">
       <menuitem id="sales_mang" name="Department" action="action_sale_warranty"/>  
    </menuitem>

</odoo>
