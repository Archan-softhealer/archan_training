<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View library.member View List -->
    <record id="view_library_member_list" model="ir.ui.view">
        <field name="name">view.library.member.list</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View library.member form -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">view.library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Library Member">
                <sheet>
                    <div class="oe_title">
                        <h1>
                          <field name="membership_id" />
                        </h1>
                    </div>
                    <group>
                     <field name="name"/>
                      <field name="borrowed_books" widget="many2many_tags"/>
                      <field name="email" />
                      <field name="phone" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View library.member search -->
    <record id="view_library_member_search" model="ir.ui.view">
        <field name="name">view.library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action library.member -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Library Member</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Library Member.
            </p>
        </field>
    </record>

</odoo>
