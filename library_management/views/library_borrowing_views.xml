<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View library.borrowing View List -->
    <record id="view_library_borrowing_list" model="ir.ui.view">
        <field name="name">view.library.borrowing.list</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <list>
                <field name="member_id" />
            </list>
        </field>
    </record>

    <!-- View library.borrowing form -->
    <record id="view_library_borrowing_form" model="ir.ui.view">
        <field name="name">view.library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form string="Library Borrowing">
                <sheet>
                   <group >
                     <field name="member_id" />
                     <field name="book_id" />
                     <field name="borrow_date" />
                     <field name="return_date" />
                     <field name="state" />
                   </group>
                </sheet>
            </form>
        </field>
    </record>

