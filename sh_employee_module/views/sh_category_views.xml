<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sh.category View List -->
    <record id="view_sh_category_list" model="ir.ui.view">
        <field name="name">view.sh.category.list</field>
        <field name="model">sh.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- View sh.category form -->
    <record id="view_sh_category_form" model="ir.ui.view">
        <field name="name">view.sh.category.form</field>
        <field name="model">sh.category</field>
        <field name="arch" type="xml">
            <form string="Sh Category">
                <sheet>
                    <div class="oe_title">
                        <group >
                              <field name="name" />
                              <field name="active"/>
                              <field name="ref" />
                              <field name="employee_ids" widget="many2many_tags"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View sh.category search -->
    <record id="view_sh_category_search" model="ir.ui.view">
        <field name="name">view.sh.category.search</field>
        <field name="model">sh.category</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action sh.category -->
    <record id="action_sh_category" model="ir.actions.act_window">
        <field name="name">Sh Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.category</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Sh Category.
            </p>
        </field>
    </record>

</odoo>
