<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sh.jobs View List -->
    <record id="view_sh_jobs_list" model="ir.ui.view">
        <field name="name">view.sh.jobs.list</field>
        <field name="model">sh.jobs</field>
        <field name="arch" type="xml">
            <list>
                            <field name="name"/>    
                            <field name="active"/>
                            <field name="address_id"/>
                            <field name="manager_ids"/>
                             <field name="employee_ids"/>
            </list>
        </field>
    </record>

    <!-- View sh.jobs form -->
    <record id="view_sh_jobs_form" model="ir.ui.view">
        <field name="name">view.sh.jobs.form</field>
        <field name="model">sh.jobs</field>
        <field name="arch" type="xml">
            <form string="Sh Jobs">
                <sheet>
                    <div class="oe_title">
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="address_id"/>
                            <field name="manager_ids"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="favorite_user_ids"/>
                            <!-- <field name="interviewer_ids"/> -->
                            <!-- <field name="extended_interviewer_ids"/> -->
                        </group> 
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View sh.jobs search -->
    <record id="view_sh_jobs_search" model="ir.ui.view">
        <field name="name">view.sh.jobs.search</field>
        <field name="model">sh.jobs</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action sh.jobs -->
    <record id="action_sh_jobs" model="ir.actions.act_window">
        <field name="name">Sh Jobs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sh.jobs</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Sh Jobs.
            </p>
        </field>
    </record>

</odoo>
