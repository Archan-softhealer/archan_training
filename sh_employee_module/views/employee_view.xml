<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View -->
    <record id="sh_employee_list" model="ir.ui.view">
        <field name="name">sh.employee.list</field>
        <field name="model">sh.employee</field>
        <field name="arch" type="xml">
            <list string="List" >
                <field name="name"/>
                 <field name="age"/>
                 <field name="job_id"/>
            </list>
        </field>
    </record>

    <!-- form -->

    <record id="sh_employee_form" model="ir.ui.view">
        <field name="name">sh.employee.form</field>
        <field name="model">sh.employee</field>
         <field name="arch" type="xml">
            <form string="Form">
                <sheet>
                    <div class="oe_title">
                      <h1>
                        <field name="uid" />
                      </h1>                     
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="job_id"></field>
                            <field name="company_name"></field>
                            <field name="company_website"></field>
                            <field name="country_id"></field>
                            <field name="birth_country_id"></field>
                             <field name="tz"></field>
                             <field name="agecategory" />
                        </group>
                        <group >
                             <field name="emp_photo" widget="image" nolabel="1" class="oe_avatar" options="{'zoom': true, 'preview_image':'emp_photo'}"/>
                            <field name="birthdate"></field> 
                            <field name="emp_salary"></field>
                            <field name="gender" widget="radio"></field>
                            <field name="department"></field>
                             <field name="user_id"></field>
                        </group>
                    </group>
                    <notebook>
                            <page string="Private Detail">
                             <group>
                              <group>
                                    <field name="personal_mobile_number"></field>
                                    <field name="personal_emp_email"></field>
                                    <field name="age"></field>
                                    <field name="height"></field>
                                    <field name="Category_id" />
                                    <field name="ref" />
                                </group>
                                <group>
                                    <field name="weight"></field>
                                    <field name="blood_group"></field>
                                    <field name="marital_status" widget="radio"></field>
                               </group>
                              </group> 
                            </page>
                            <page string="Work Details">
                              <group>
                                <field name="work_mobile_number"/>
                                <field name="Work_email"/>
                                <field name="emp_role"/>
                                <field name="category" widget="many2many_tags"/>
                              </group>
                            </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="sh_employee_action" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">sh.employee</field>
        <field name="view_mode">form,list</field>
        <field name="view_id" ref="sh_employee_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No items found
            </p>
        </field>
    </record>

    <!-- Menu -->
    

</odoo>
