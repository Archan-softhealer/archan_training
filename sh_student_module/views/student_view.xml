<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View -->
    <record id="sh_student_list" model="ir.ui.view">
        <field name="name">Tags</field>
        <field name="model">sh.student</field>
        <field name="arch" type="xml">
            <list string="Tags">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="sh_student_action" model="ir.actions.act_window">
        <field name="name">sh_student</field>
        <field name="res_model">sh.student</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="sh_student_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No items found
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem 
        id="sh_student"
        name="student_menu"
        action="sh_student_action" 
        sequence="1" />

</odoo>
